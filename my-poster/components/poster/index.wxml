<view class="shade" catchtap="shade" wx:if="{{isShow}}">
  <view class="canves-box1">
    <view class="canves" id="canves">
      <canvas type="2d" id="myCanvas" style="width:100%;height:100%;"></canvas>
    </view>
  </view>
  <view class="canves-box">
    <!-- style=" width:750rpx;"  -->
    <image src="{{tempFilePath}}" style="height: 1000rpx;" mode="widthFix"></image>
    <view class="canves-btn">
      <view catchtap="savePoster">保存图片</view>
      <!-- <view catchtap="relayPoster">分享到朋友圈</view> -->
    </view>
  </view>
</view>

