.shade {
  position: fixed;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .6);
}

.canves-box {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.canves {
  width: 670rpx;
  height: 985rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.canves-btn {
  height: 100rpx;
  width: 670rpx;
  background-color: #f0f;
}